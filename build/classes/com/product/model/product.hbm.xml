<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="com.product.model.ProductVO" table="product">
    
        <id name="pro_no" column="pro_no">
            <generator class="sequence">
                <param name="sequence_name">product_seq</param>
            </generator>
        </id>
        
        <property name="pro_nam" column="pro_nam"/>
        <property name="pro_con" column="pro_con"/>
        <property name="pro_pri" column="pro_pri"/>
        <property name="pro_sta" column="pro_sta"/>
        <property name="pro_sto" column="pro_sto"/>
    
        <many-to-one name="product_categoryVO" class="com.product_category.model.Product_CategoryVO" lazy="false">
            <column name="cat_no"/>
        </many-to-one>
        
        <set name="product_images" table="product_image" lazy="false"
             cascade="none" inverse="true" order-by="pro_img_no asc">
             <key>
                 <column name="pro_no"/>
             </key>
             <one-to-many class="com.product_image.model.Product_ImageVO"/>
        </set>
         
         <set name="order_detailss" table="order_details" lazy="false"
              cascade="none" inverse="true" order-by="pro_no asc">
              <key>
                  <column name="pro_no"/>
              </key> 
              <one-to-many class="com.order_details.model.Order_DetailsVO"/>
          </set>
        
    </class>

</hibernate-mapping>